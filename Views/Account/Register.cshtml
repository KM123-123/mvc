@model mvc.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "_Layout"; // Usa la plantilla principal
}

<style>
    .login-container {
        height: 100%; /* Ocupa el 100% del espacio que le da el layout */
        width: 100%;
    }

    .login-branding-bg {
        background: linear-gradient(135deg, #005662, #002D3A);
        color: white;
        padding: 4rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .login-form-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem;
        background-color: #ffffff;
    }

    .form-wrapper {
        width: 100%;
        max-width: 450px;
    }

    /* Colores de botones consistentes */
    .btn-pearson-primary {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
        font-weight: bold;
    }

    .btn-pearson-secondary {
        background-color: #00778a;
        border-color: #00778a;
        color: #ffffff;
        font-weight: bold;
    }

    /* Estilos para agrandar el formulario (un poco más que el login) */
    .login-form-container h2 {
        font-size: 2.5rem;
    }

    .login-form-container .form-label,
    .login-form-container .form-control,
    .login-form-container p {
        font-size: 1.2rem;
    }

    .login-form-container .form-control {
        padding: 0.85rem 1.1rem;
    }

    .login-form-container .btn-lg {
        font-size: 1.25rem;
        padding: 0.8rem 1rem;
    }
</style>

<div class="container-fluid p-0 login-container">
    <div class="row g-0 h-100">
        <div class="col-lg-7 d-none d-lg-flex login-branding-bg">
            <div>
                <h1 class="display-4">Sistema de Ventas</h1>
                <p class="lead">Crea una cuenta para acceder al sistema y gestionar las ventas.</p>
            </div>
        </div>

        <div class="col-lg-5 col-md-12 login-form-container">
            <div class="form-wrapper">
                <h2 class="mb-2">Crear cuenta</h2>
                <p class="text-muted mb-4">Todos los registros son empleados y requieren activación.</p>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Nombre Completo</label>
                        <input asp-for="FullName" class="form-control" placeholder="Nombre completo" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repite la contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="Position" value="Empleado" />

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-pearson-secondary btn-lg">Registrarse</button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-2">¿Ya tienes una cuenta?</p>
                    <div class="d-grid">
                        <a asp-action="Login" class="btn btn-pearson-primary btn-lg">Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}