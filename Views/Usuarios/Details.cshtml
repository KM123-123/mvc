@model mvc.Models.Usuario
@{
    ViewData["Title"] = "Detalles del Usuario";
    var roles = ViewBag.Roles as List<string>;
}

<h2>Detalles del Usuario</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Nombre Completo:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Rol(es):</dt>
        <dd class="col-sm-10">
            @if (roles != null && roles.Any())
            {
                @foreach (var rol in roles)
                {
                    <span class="badge bg-info me-1">@rol</span>
                }
            }
            else
            {
                <span class="badge bg-secondary">Sin rol asignado</span>
            }
        </dd>

        <dt class="col-sm-2">Estado:</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>